<p id="notice"><%= notice %></p>
<%no=1%>
<section class="content-header">
  <h1>
    List
    <small>Kriteria</small>
  </h1>
</section>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
          <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Nama Kriteria</th>
                    <th>Tipe</th>
                    <th>Bobot</th>
                    <th colspan="2">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% @kriteria.each do |kriteria| %>
                    <tr>
                      <td><%= no %></td>
                      <td><%= kriteria.nama %></td>
                      <% tipe = case kriteria.tipe %>
                        <% when 1 then "Benefit" %>
                        <% when 0 then "Cost" %>
                        <% end %>
                      <td><%= tipe %>
                      </td>
                      <td><%= kriteria.bobot %></td>
                      <td><%= link_to '<i class = "fa fa-edit"></i>'.html_safe, edit_kriterium_path(kriteria) %></td>
                      <td><%= link_to '<i class = "fa fa-trash"></i>'.html_safe, kriteria, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% no=no+1 %>
                  <% end %>
                </tbody>
              </table>
            </div>
      </div>
    </div>
  </div>
</section>
