
      <%= form_for @rangking, :html => {:class => "form-horizontal form-label-left"} do |f| %>
        <% if rangking.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(rangking.errors.count, "error") %> prohibited this rangking from being saved:</h2>

            <ul>
            <% rangking.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <% @a = @currentAlt %>
        <% @k = @currentKri %>
        <div class="form-group">
          <%= f.label '', "Alternatif :", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= collection_select('', '', Alternatif.where(id: @currentAlt), :id, :nama_alternatif, {}, {:class => "form-control", disabled: true}) %>
            </div>
        </div>
        <div class="ln_solid"></div>


        <div class="form-group">
          <%= f.label '', "Kriteria :", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= collection_select('', '', Kriterium.where(id: @currentKri), :id, :nama, {}, {:class => "form-control", disabled: true}) %>
            </div>
        </div>
        <div class="ln_solid"></div>

        <div class="form-group">
          <%= f.label :nilai, "Nilai :", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.text_field :nilai, class: "form-control" %>
            </div>
        </div>
          <%= hidden_field(:rangking, :alternatif_id, :value => @a) %>
          <%= hidden_field(:rangking, :kriteria_id, :value => @k) %>
        <div class="ln_solid"></div>
        <div class="form-group">
          <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <%= f.submit "Simpan", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
      <button type="button" value="Kembali" class="btn btn-default" onclick="window.location.href='<%= @url %> '">Kembali</button>
